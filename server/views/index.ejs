<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <title>Giphy Search Experiment</title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1" id="viewport">
    <link href="/assets/images/favicon.png" rel="shortcut icon" type="image/vnd.microsoft.icon" />
  </head>
  <body>
    <svg class="svg-definitions" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

    </svg>
    <div id="app-container"></div>
    <script type="text/javascript">
      // Detect & set the offset (scrollbar width) between the window width and
      // the viewport width, for later use, if vertical scroll bars are present.
      // This value can be variable from one OS to another.

      // eslint-disable-next-line no-var
      var offsetWidth = window.innerWidth - document.body.clientWidth;

      document.body.style.height = '100%';

      // eslint-disable-next-line no-var
      var viewPortEl = document.getElementById('viewport');

      document.body.setAttribute('data-offset', offsetWidth);

      // eslint-disable-next-line no-var
      var viewPortWidth = 'width=device-width, ';

      // eslint-disable-next-line no-var
      var viewPortHeight = 'height=' + window.innerHeight + ', initial-scale=1';

      viewPortEl.setAttribute('content', viewPortWidth + viewPortHeight);
    </script>
    <script src="/bundle.js" type="text/javascript"></script>
  </body>
</html>
